# Copy this file to .env and fill in the values.

# Choose the framework: "openai" (default) or "aladdin"
ANSWER_FRAMEWORK=openai

# OpenAI configuration
OPENAI_API_KEY=your_openai_key_here
# Optional: override the default model (e.g., gpt-4.1-nano-2025-04-14_research or o3-2025-04-16_research)
OPENAI_MODEL=gpt-4.1-nano-2025-04-14_research

# Aladdin custom framework configuration
aladdin_studio_api_key=your_aladdin_key_here
defaultWebServer=https://webster.example.com
aladdin_user=your_service_account_username
aladdin_passwd=your_service_account_password

RFP_FUND_TAG=your_rfp_fund_tag_here
# Optional: default search mode ("answer", "question", "both", etc.)
RFP_SEARCH_MODE=both
# Optional: preset answer length ("short", "medium", "long")
RFP_LENGTH=medium
# Optional: exact word count overriding RFP_LENGTH
RFP_APPROX_WORDS=150
# Optional: hits per question
RFP_K=6
# Optional: minimum confidence threshold for citations
RFP_MIN_CONFIDENCE=0.0
# Optional: set to "0" to skip citations in answers
RFP_INCLUDE_COMMENTS=1
SURFACE_EMB_MODEL=your_surface_emb_model_here
SURF_URL=https://webster.example.com

# Azure feedback storage (optional)
AZURE_FEEDBACK_CONNECTION_STRING=your_connection_string_here
AZURE_FEEDBACK_CONTAINER=rfp-feedback
AZURE_FEEDBACK_BLOB=feedback-log.ndjson
